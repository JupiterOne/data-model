{
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "dist",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": false,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "pretty": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  }
}
