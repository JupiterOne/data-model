{
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": false
  }
}
