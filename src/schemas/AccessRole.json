{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#AccessRole",
  "description": "An access control role mapped to a Principal (e.g. user, group, or service).",
  "type": "object",
  "allOf": [
    {
      "$ref": "#Entity"
    },
    {
      "properties": {
        "superAdmin": {
          "description": "Is the role an administrator role?",
          "type": "boolean",
          "validation": {
            "method": "type_only"
          }
        },
        "systemRole": {
          "description": "Is this a system role?",
          "type": "boolean",
          "validation": {
            "method": "type_only"
          }
        },
        "privilegeServiceIds": {
          "description": "The role's privilege service IDs",
          "type": "array",
          "items": {
            "type": "string"
          },
          "validation": {
            "method": "type_only",
            "array_empty_allowed": false
          }
        },
        "privilegeNames": {
          "description": "The role's privilege names",
          "type": "array",
          "items": {
            "type": "string"
          },
          "validation": {
            "method": "type_only",
            "array_empty_allowed": false
          }
        }
      },
      "required": []
    }
  ]
}
