{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#Secret",
  "description": "A stored encrypted secret, accessed by permitted users or applications.",
  "type": "object",
  "allOf": [
    {
      "$ref": "#Entity"
    },
    {
      "properties": {
        "visibility": {
          "description": "What resources can access the secret",
          "type": "string",
          "examples": [
            "private",
            "all",
            "selected"
          ]
        }
      },
      "required": [],
      "excludes": []
    }
  ]
}