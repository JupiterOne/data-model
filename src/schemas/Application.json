{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#Application",
  "description": "A software product or application.",
  "type": "object",
  "allOf": [
    {
      "$ref": "#Entity"
    },
    {
      "properties": {
        "COTS": {
          "description": "Indicates if this is a Commercial Off-The-Shelf software application. Custom in-house developed application should have this set to false.",
          "type": "boolean",
          "default": false,
          "validation": {
            "method": "type_only"
          }
        },
        "FOSS": {
          "description": "Indicates if this is a Free or Open-Source software application or library. Custom in-house developed application should have this set to false.",
          "type": "boolean",
          "default": false,
          "validation": {
            "method": "type_only"
          }
        },
        "SaaS": {
          "description": "Indicates if this is a Software-as-a-Service product.",
          "type": "boolean",
          "default": false,
          "validation": {
            "method": "type_only"
          }
        },
        "external": {
          "description": "Indicates if this is an externally acquired software application. Custom in-house developed application should have this set to false.",
          "type": "boolean",
          "default": false,
          "validation": {
            "method": "type_only"
          }
        },
        "mobile": {
          "description": "Indicates if this is a mobile app.",
          "type": "boolean",
          "default": false,
          "validation": {
            "method": "type_only"
          }
        },
        "license": {
          "description": "Stores the type of license",
          "type": "string",
          "examples": [
            "BSD",
            "CC-BY-3.0",
            "CC-BY-4.0",
            "GPL-2.0",
            "GPL-3.0",
            "LGPL-2.0",
            "LGPL-2.1",
            "LGPL-3.0",
            "MIT",
            "EULA",
            "Proprietary",
            "UNLICENSED",
            "other"
          ],
          "validation": {
            "method": "type_only"
          }
        },
        "licenseURL": {
          "description": "The URL to the full license",
          "type": "string",
          "format": "uri",
          "validation": {
            "method": "reference",
            "pattern_reference": "url"
          }
        },
        "productionURL": {
          "description": "The Production URL",
          "type": "string",
          "format": "uri",
          "validation": {
            "method": "reference",
            "pattern_reference": "url"
          }
        },
        "stagingURL": {
          "description": "The Non-Production / Staging URL",
          "type": "string",
          "format": "uri",
          "validation": {
            "method": "reference",
            "pattern_reference": "url"
          }
        },
        "devURL": {
          "description": "The Development URL",
          "type": "string",
          "format": "uri",
          "validation": {
            "method": "reference",
            "pattern_reference": "url"
          }
        },
        "testURL": {
          "description": "The Test URL",
          "type": "string",
          "format": "uri",
          "validation": {
            "method": "reference",
            "pattern_reference": "url"
          }
        },
        "alternateURLs": {
          "description": "The additional URLs related to this application.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "validation": {
            "method": "reference",
            "array_empty_allowed": false,
            "pattern_reference": "url"
          }
        }
      },
      "required": []
    }
  ]
}